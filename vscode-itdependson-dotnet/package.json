{
  "name": "itdependson-dotnet",
  "displayName": "It Depends On - .NET Dependency Visualizer",
  "description": "Visualize C# solution and project dependencies in an interactive graph",
  "version": "0.0.1",
  "publisher": "itdependson",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "dotnet",
    "csharp",
    "dependencies",
    "visualization",
    "graph"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "itdependson.openSolution",
        "title": "Open Solution/Project File",
        "category": "It Depends On"
      },
      {
        "command": "itdependson.visualizeDependencies",
        "title": "Visualize Dependencies",
        "category": "It Depends On"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "itdependson.visualizeDependencies",
          "when": "resourceExtname == .sln || resourceExtname == .csproj",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:webview",
    "compile:extension": "tsc -p ./tsconfig.json",
    "compile:webview": "npm run build --prefix webview",
    "watch": "tsc -watch -p ./tsconfig.json",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.2"
  }
}