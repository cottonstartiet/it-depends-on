{
  "name": "itdependson-dotnet",
  "displayName": "ItDependsOn - .NET Dependency Visualizer",
  "description": "Visualize C# solution and project dependencies in an interactive graph",
  "version": "0.2.0",
  "publisher": "ritekodedotcom",
  "icon": "assets/it-depends-on-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/cottonstartiet/it-depends-on.git"
  },
  "homepage": "https://github.com/cottonstartiet/it-depends-on#readme",
  "bugs": {
    "url": "https://github.com/cottonstartiet/it-depends-on/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "dotnet",
    "csharp",
    "dependencies",
    "visualization",
    "graph"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/.sln",
    "workspaceContains:**/.csproj"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "itdependson.openSolution",
        "title": "Select Solution or Project",
        "category": "ItDependsOn"
      },
      {
        "command": "itdependson.visualizeDependencies",
        "title": "Visualize Dependencies",
        "category": "ItDependsOn"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "itdependson.visualizeDependencies",
          "when": "resourceExtname == .sln || resourceExtname == .csproj",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:webview",
    "compile:extension": "tsc -p ./tsconfig.json",
    "compile:webview": "npm run build --prefix webview",
    "watch": "tsc -watch -p ./tsconfig.json",
    "watch:webview": "npm run watch --prefix webview",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "clean": "node -e \"const fs=require('fs');['dist','out'].forEach(d=>{if(fs.existsSync(d))fs.rmSync(d,{recursive:true})})\"",
    "package": "npx vsce package --allow-missing-repository",
    "package:install": "npm run package && code --install-extension *.vsix",
    "build:vsix": "npm run compile && npm run package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.2",
    "strnum": "^1.1.1"
  }
}
